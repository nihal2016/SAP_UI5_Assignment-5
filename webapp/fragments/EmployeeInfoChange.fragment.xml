<core:FragmentDefinition xmlns:m="sap.m" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<l:Grid containerQuery="true" defaultSpan="XL3 L3 M6 S12">
		<form:SimpleForm editable="false" layout="ResponsiveGridLayout" title="{i18n>EmployeeInfoPersonalDetailTitle}" labelSpanXL="3" labelSpanL="3" labelSpanM="3"
			labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
			singleContainerFullSize="false">
			<form:content>
				<m:Label text="{i18n>EmployeeInfoFirstName}"/>
				<m:Input value="{FirstName}"/>
				<m:Label text="{i18n>EmployeeInfoLastName}"/>
				<m:Input value="{LastName}"/>
				<m:Label text="{i18n>EmployeeInfoBirthDate}"/>
				<m:Input value="{parts:['BirthDate'],formatter:'.formatter.date'}"/>
			</form:content>
		</form:SimpleForm>
		<form:SimpleForm editable="false" layout="ResponsiveGridLayout" title="{i18n>EmployeeInfoAddressDetailTitle}" labelSpanXL="3" labelSpanL="3" labelSpanM="3"
			labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
			singleContainerFullSize="false">
			<form:content>
				<m:Label text="{i18n>EmployeeInfoAddress}"/>
				<m:Input value="{Address}"/>
				<m:Label text="{i18n>EmployeeInfoCity}"/>
				<m:Input value="{City}"/>
				<m:Label text="{i18n>EmployeeInfoRegion}"/>
				<m:Input value="{Region}"/>
				<m:Label text="{i18n>EmployeeInfoPostalCode}"/>
				<m:Input value="{PostalCode}"/>
				<m:Label text="{i18n>EmployeeInfoCountry}"/>
				<m:Input value="{Country}"/>
			</form:content>
		</form:SimpleForm>
		<form:SimpleForm editable="false" layout="ResponsiveGridLayout" title="{i18n>EmployeeInfoContactDetailTitle}" labelSpanXL="3" labelSpanL="3" labelSpanM="3"
			labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
			singleContainerFullSize="false">
			<form:content>
				<m:Label text="{i18n>EmployeeInfoHomePhone}"/>
				<m:Input value="{HomePhone}"/>
				<m:Label text="{i18n>EmployeeInfoExtension}"/>
				<m:Input value="{Extension}"/>
			</form:content>
		</form:SimpleForm>
	</l:Grid>
</core:FragmentDefinition>